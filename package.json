{
  "author": "paul@savignano.io",
  "bin": {
    "mtg": "ts-node src/genTypes.ts",
    "mtg-down": "ts-node src/downloadCollections.ts",
    "mtg-download-collections": "ts-node src/downloadCollections.ts",
    "mtg-gen": "ts-node src/genTypes.ts",
    "mtg-gen-types": "ts-node src/genTypes.ts",
    "mtg-up": "ts-node src/uploadCollections.ts",
    "mtg-upload-collections": "ts-node src/uploadCollections.ts"
  },
  "bugs": {
    "url": "https://github.com/PaulSavignano/mongo-type-gen/issues"
  },
  "dependencies": {
    "fast-glob": "^3.3.1",
    "json-schema": "^0.4.0"
  },
  "description": "A type and sdl generator for MongoDB jsonSchema",
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-sort-class-members": "^1.19.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "eslint-plugin-yml": "^1.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.3"
  },
  "directories": {
    "lib": "src"
  },
  "engines": {
    "node": "20.9.0"
  },
  "files": [
    "bin",
    "LICENSE",
    "tsconfig.json"
  ],
  "homepage": "https://github.com/PaulSavignano/mongo-type-gen#readme",
  "keywords": [
    "GraphQL",
    "Mongo",
    "Typescript",
    "Types"
  ],
  "license": "ISC",
  "lint-staged": {
    "*.ts": "tsc --project . --noEmit",
    "*.{css,js,jsx,ts,tsx,json,mjs,htm,html,yml,yaml}": "prettier --write",
    "*.{ts,tsx,js,json,jsx,mjs}": "eslint --cache --fix"
  },
  "main": "bin/genTypes.ts",
  "name": "mongo-type-gen",
  "peerDependencies": {
    "graphql-tag": "^2.0.0",
    "mongodb": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PaulSavignano/mongo-type-gen.git"
  },
  "scripts": {
    "build": "rm -rf bin && node esbuild.mjs",
    "checks:ci": "npm run format && npm run lint && npm run typecheck && npm run build",
    "docker:down": "docker compose -f compose.dev.yaml down --remove-orphans",
    "docker:up": "docker compose -f compose.dev.yaml up -d",
    "downloadCollections": "ts-node ./src/downloadCollections.ts",
    "format": "prettier --list-different '**/*.{css,js,jsx,ts,tsx,json,htm,html,yml,yaml}'",
    "format:fix": "prettier --write '**/*.{css,js,jsx,ts,tsx,json,htm,html,yml,yaml}'",
    "genTypes": "ts-node ./src/genTypes.ts -sdls",
    "genTypes:build": "node ./bin/genTypes.js",
    "genTypes:build:watch": "node ./bin/genTypes.js -w",
    "genTypes:watch": "ts-node ./src/genTypes.ts -w -sdls",
    "husky:install": "husky install",
    "lint": "eslint . --ext .ts,.tsx,.js,.json,.jsx,.yaml,.yml",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.json,.jsx,.yaml,.yml --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --project . --noEmit",
    "uploadCollections": "ts-node ./src/uploadCollections.ts"
  },
  "version": "0.0.0"
}
